<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/catItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginHorizontal="12dp"
    android:paddingBottom="8dp"
    android:background="@drawable/rounded_corner_bg">

    <TextView
        android:id="@+id/catFactTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/rounded_corner_bg"
        android:ellipsize="end"
        android:maxHeight="100dp"
        android:maxLines="4"
        android:text="TextView а ла ла л ала ла а ла ла л ала ла а ла ла л ала ла а ла ла л ала ла а ла ла л ала ла а ла ла л ала ла а ла ла л ала ла а ла ла л ала ла а ла ла л ала ла ал а"
        android:textColor="@color/text"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/materialCardViewCatFact"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardViewCatFact"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/catProgressBar"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyle"
            android:layout_width="37dp"
            android:layout_height="37dp" />

        <ImageView
            android:id="@+id/cat_fact_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>